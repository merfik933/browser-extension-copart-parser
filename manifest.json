{
  "manifest_version": 3,
  "name": "Copart Parser",
  "description": "Parsing lots from copart.de and saving them as JSON + images",
  "version": "1.0",

  "permissions": [
    "scripting",
    "tabs",
    "storage",
    "downloads",
    "activeTab"
  ],

  "host_permissions": [
    "https://www.copart.de/*",
    "https://g2auction.copart.de/*"
  ],

  "web_accessible_resources": [
    {
      "resources": ["libs/jszip.min.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "options_page": "options.html"
}
